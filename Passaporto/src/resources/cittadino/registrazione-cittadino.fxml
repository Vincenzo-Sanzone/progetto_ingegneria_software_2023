<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="363.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.cittadino.RegistrazioneCittadino">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label fx:id="registrazioneErroreUtente">
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </Label>
      <SplitPane dividerPositions="0.5">
        <items>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <Label text="Inserire il nome" />
                  <Label text="Inserire il cognome">
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin></Label>
                  <Label text="Data di nascita">
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                  </Label>
                  <Label text="Luogo di nascita">
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                  </Label>
                  <Label text="Codice Fiscale">
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                  </Label>
                  <Label text="NRÂ° Tessera sanitaria">
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                  </Label>
                  <Label text="Inserire password">
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                  </Label>
                  <Button fx:id="bottoneIndietroRegistrazioneUtente" mnemonicParsing="false" onAction="#tornaIndietroRegistrazione" text="Torna indietro">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <TextField fx:id="registrazioneNomeUtente" onKeyPressed="#invioRegistrazione" />
                  <TextField fx:id="registrazioneCognomeUtente" onKeyPressed="#invioRegistrazione">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </TextField>
                  <DatePicker fx:id="registrazioneDataNascitaUtente" onKeyPressed="#invioRegistrazione">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </DatePicker>
                  <TextField fx:id="registrazioneLuogoNascitaUtente" onKeyPressed="#invioRegistrazione">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </TextField>
                  <TextField fx:id="registrazioneCodiceFiscale" onKeyPressed="#invioRegistrazione">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </TextField>
                  <TextField fx:id="registrazioneTesseraSanitariaUtente">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </TextField>
                  <TextField fx:id="registrazionePasswordUtente" onKeyPressed="#invioRegistrazione">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </TextField>
                  <Button fx:id="sottomettiRegistrazione" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#sottomettiRegistrazione" text="Sottometti" textAlignment="CENTER">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
        </items>
      </SplitPane>

   </children>

</VBox>
