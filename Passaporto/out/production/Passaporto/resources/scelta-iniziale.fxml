<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SceltaIniziale">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label fx:id="erroreSceltaIniziale">
         <VBox.margin>
            <Insets bottom="29.0" />
         </VBox.margin>
      </Label>
      <Button fx:id="interfacciaUtente" mnemonicParsing="false" onAction="#visioneCittadino" text="Clicca qui se sei un cittadino" />
      <Button fx:id="interfacciaAddetto" mnemonicParsing="false" onAction="#visioneAddetto" text="Clicca qui se sei un addetto">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
